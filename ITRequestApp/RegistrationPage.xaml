<Page x:Class="ITRequestApp.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      Title="Регистрация в IT Request App">
    <Grid Background="#F0F0F0">
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Регистрация" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Center"/>
                <DockPanel>
                    <fa:ImageAwesome Icon="User" Width="24" Margin="5" Foreground="#2196F3"/>
                    <TextBox x:Name="UsernameTextBox" ToolTip="Введите имя пользователя">
                        <TextBox.Tag>ФИО</TextBox.Tag>
                    </TextBox>
                </DockPanel>
                <DockPanel>
                    <fa:ImageAwesome Icon="Lock" Width="24" Margin="5" Foreground="#2196F3"/>
                    <PasswordBox x:Name="PasswordBox" ToolTip="Введите пароль">
                        <PasswordBox.Tag>Пароль</PasswordBox.Tag>
                    </PasswordBox>
                </DockPanel>
                <DockPanel>
                    <fa:ImageAwesome Icon="Building" Width="24" Margin="5" Foreground="#2196F3"/>
                    <ComboBox x:Name="DepartmentComboBox" DisplayMemberPath="Name">
                        <ComboBox.Tag>Отдел</ComboBox.Tag>
                    </ComboBox>
                </DockPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="RegisterButton" Click="RegisterButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="UserPlus" Width="16" Margin="0,0,5,0" Foreground="White"/>
                            <TextBlock Text="Зарегистрироваться"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BackButton" Click="BackButton_Click" Background="#E0E0E0" Foreground="Black">
                        <fa:ImageAwesome Icon="ArrowLeft" Width="16" Foreground="Black"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>